                     </items>
                  </SplitMenuButton>
                  <TextField fx:id="txtAmount" editable="false" prefHeight="10.0" prefWidth="453.0" promptText="0.00" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 0 0 1 0; -fx-text-fill: white; -fx-prompt-text-fill: white;">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                  </TextField>
                  <TextField fx:id="txtDate" editable="false" prefHeight="10.0" prefWidth="453.0" promptText="YYYY-MM-DD" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 0 0 1 0; -fx-text-fill: white; -fx-prompt-text-fill: white;">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                  </TextField>
               </children>
            </VBox>
            <VBox layoutX="14.0" layoutY="103.0" prefHeight="351.0" prefWidth="189.0" spacing="45.0">
               <children>
                  <Label text="Payment ID" textFill="WHITE">
                     <font>
                        <Font name="Cambria Math" size="20.0" />
                     </font>
                  </Label>
                  <Label text="Order ID" textFill="WHITE">
                     <font>
                        <Font name="Cambria Math" size="20.0" />
                     </font>
                  </Label>
                  <Label text="Payment Method" textFill="WHITE">
                     <font>
                        <Font name="Cambria Math" size="20.0" />
                     </font>
                  </Label>
                  <Label text="Amount" textFill="WHITE">
                     <font>
                        <Font name="Cambria Math" size="20.0" />
                     </font>
                  </Label>
                  <Label text="Date" textFill="WHITE">
                     <font>
                        <Font name="Cambria Math" size="20.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <Label fx:id="lblPaymentID" layoutX="216.0" layoutY="103.0" prefHeight="22.0" prefWidth="221.0" style="-fx-border-color: white; -fx-border-width: 0 0 1 0;" textFill="WHITE">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Button fx:id="btnClose" layoutX="24.0" layoutY="24.0" mnemonicParsing="false" onAction="#btnCloseOnAction" prefHeight="22.0" prefWidth="33.0" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-radius: 100;" text="x" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
