   <children>
      <AnchorPane prefHeight="459.0" prefWidth="699.0" style="-fx-background-color: #c23616;">
         <children>
            <ImageView fitHeight="459.0" fitWidth="701.0" layoutX="-1.0" pickOnBounds="true">
               <image>
                  <Image url="@../../Image/mnage.jpg" />
               </image>
            </ImageView>
            <Label layoutX="265.0" layoutY="9.0" style="-fx-border-color: white; -fx-border-width: 0 0 2 0;" text="Payment Found" textFill="WHITE">
               <font>
                  <Font name="Cambria Math" size="25.0" />
               </font>
            </Label>
            <VBox layoutX="216.0" layoutY="168.0" prefHeight="275.0" prefWidth="453.0" spacing="40.0">
               <children>
                  <TextField fx:id="txtOrderID" prefHeight="27.0" prefWidth="453.0" promptText="Order ID" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 0 0 1 0; -fx-text-fill: white; -fx-prompt-text-fill: white;">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                  </TextField>
                  <SplitMenuButton fx:id="SplitMenuPaymentMethod" mnemonicParsing="false" text="Payment Method">
